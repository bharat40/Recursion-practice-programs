#include<stdio.h> // factorial of a given number using recursion 
int factorial(int n);
int main()
{
    int n, r;
    printf("Enter a number = ");
    scanf("%d",&n);
    r = factorial(n);
    printf("Factorial of %d = %d",n,r);
    return 0;
}

int factorial(int n)
{
    int i, fact = 1;
    for(i=1;i<=n;i++)
    {
        fact = fact*i;
    }
    return fact;
}
